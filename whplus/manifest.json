{
    "manifest_version" : 2,

    "name" : "Webhallen+",
    "short_name" : "WH+",
    "description" : "Lägger till ikoner, större knappar, samt notifikationer för webhallen.com",
    "author" : "Jasdoge",


    "version" : "1.0.0",
    "icons":{
        "28" : "icon.png",
        "144" : "logo-144.png"
    },

    "content_scripts" : [{
        "matches" : [
            "https://www.webhallen.com/*",
            "https://webhallen.com/*"
        ],
        "js" : ["jquery.min.js","content.js"]
    }],

    "browser_action": {
        "default_icon": "icon_loading.png",
        "default_title": "WH+",
        "default_popup": "popup.html"
    },

    "options_page" : "options.html",

    "permissions":["storage", "notifications", "tabs"],

    "background" : {
        "scripts" : ["jquery.min.js","moment.min.js","moment-timezone-with-data.min.js", "background.js"]
    },


    "web_accessible_resources" : ["media/svg/*.svg", "main.css"]
}